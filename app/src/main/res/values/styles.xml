<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#000</item>
        <!--텍스트 검정색-->
        <item name="android:textColor">#000000</item>
        <item name="android:windowAnimationStyle">
            @style/WindowAnimationTransition
        </item>
    </style>

    <style name="AppThemeDarkActionBar"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#000</item>
        <!--텍스트 검정색-->
        <item name="android:textColor">#000000</item>
        <item name="android:windowAnimationStyle">
            @style/WindowAnimationTransition
        </item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">
            @android:anim/fade_in
        </item>
        <item name="android:windowExitAnimation">
            @android:anim/fade_out
        </item>
    </style>

    <!-- Custom RatingBar-->
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorYellow</item>
        <item name="colorControlActivated">@color/colorYellow</item>
    </style>

</resources>
